
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Current Cars</h2>
<div class="container">
 
 <div class="table-responsive">
   
<table class="table table-hover">

                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Car Make
                    </th>
                    <th>
                        Car Model
                    </th>
                    <th>
                        Cost Per Day/£
                    </th>
                    <th>
                        Quantity
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.Encode(item.Id)
                        </td>
                        <td>
                            @Html.Encode(item.Make)
                        </td>
                        <td>
                            @Html.Encode(item.Model)
                        </td>
                        <td>
                            @Html.Encode(item.CostPD)
                        </td>
                        <td>
                            @Html.Encode(item.Quantity)
                        </td>

                    </tr>
                }
            </table>
     </div>
    </div>
