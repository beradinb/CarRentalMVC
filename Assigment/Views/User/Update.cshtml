@model Assigment.ViewModels.UserRegistrationVM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit User</h2>
<div>
    @using (Html.BeginForm("Update", "User", FormMethod.Post))
    {
        <fieldset>
            <div>
                @Html.LabelFor(u => u.Firstname)
                @Html.ValidationMessageFor(u => u.Firstname)
                @Html.EditorFor(u => u.Firstname)
            </div>
            <div>
                @Html.LabelFor(u => u.Surname)
                @Html.ValidationMessageFor(u => u.Surname)
                @Html.EditorFor(u => u.Surname)
            </div>
            <div>
                @Html.LabelFor(u => u.Username)
                @Html.ValidationMessageFor(u => u.Username)
                @Html.EditorFor(u => u.Username)
            </div>
            <div>
                @Html.LabelFor(u => u.EmailAddress)
                @Html.ValidationMessageFor(u => u.EmailAddress)
                @Html.EditorFor(u => u.EmailAddress)
            </div>
            <div>
                @Html.LabelFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password)
                @Html.PasswordFor(u => u.Password)
            </div>
            <input type="submit" value="Submit" />
        </fieldset>}
    @{Html.EndForm();}
    @ViewData["Message"]
</div>
