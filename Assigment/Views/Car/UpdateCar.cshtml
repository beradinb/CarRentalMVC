@model Assigment.ViewModels.CarVM
@{
    ViewBag.Title = "Edit Car";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Car</h2>
<div>
    @using (Html.BeginForm("UpdateCar", "Car", FormMethod.Post))
    {
        <fieldset>
            <div>
                @Html.LabelFor(u => u.Make)
                @Html.ValidationMessageFor(u => u.Make)
                @Html.EditorFor(u => u.Make)
            </div>
            <div>
                @Html.LabelFor(u => u.Model)
                @Html.ValidationMessageFor(u => u.Model)
                @Html.EditorFor(u => u.Model)
            </div>
            <div>
                @Html.LabelFor(u => u.CostPD)
                @Html.ValidationMessageFor(u => u.CostPD)
                @Html.EditorFor(u => u.CostPD)
            </div>
            <div>
                @Html.LabelFor(u => u.Quantity)
                @Html.ValidationMessageFor(u => u.Quantity)
                @Html.EditorFor(u => u.Quantity)
            </div>
            <input type="submit" value="Submit" />
        </fieldset>}
    @{Html.EndForm();}
    @ViewData["Message"]
</div>

